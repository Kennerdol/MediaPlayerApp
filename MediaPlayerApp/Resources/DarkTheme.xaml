<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme -->
    <ResourceDictionary x:Key="DarkTheme">
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#212121"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2C2C2C"/>
        <SolidColorBrush x:Key="Foreground" Color="White"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FFD180"/>
    </ResourceDictionary>


</ResourceDictionary>