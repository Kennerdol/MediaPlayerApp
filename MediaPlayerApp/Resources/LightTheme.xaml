<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

     <!-- Light Theme -->
    <ResourceDictionary x:Key="LightTheme">
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="White"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="LightGray"/>
        <SolidColorBrush x:Key="Foreground" Color="Black"/>
        <SolidColorBrush x:Key="AccentColor" Color="DodgerBlue"/>
    </ResourceDictionary>
</ResourceDictionary>