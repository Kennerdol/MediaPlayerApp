<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Window -->
    <SolidColorBrush x:Key="WindowBackground" Color="#FFF" />
    <SolidColorBrush x:Key="WindowForeground" Color="#FF040404" />

    <SolidColorBrush x:Key="NoBackground" Color="Transparent" />
    <SolidColorBrush x:Key="BorderBrush" Color="#9ba3a3" />

    <!-- Splitter -->
    <!--<SolidColorBrush x:Key="Splittercolor" Color="#98A5B0" Opacity="0.4"/>-->
    <SolidColorBrush x:Key="SplitterBackgroundcolor" Color="#9ba3a3" Opacity="0.4"/>
    <SolidColorBrush x:Key="SplitterBordercolor" Color="#98A5B0"/>

    <!-- Playlist -->
    <SolidColorBrush x:Key="PlaylistBorder" Color="#86A0AC"/>
    <SolidColorBrush x:Key="PlaylistBorderHover" Color="#98A5B0"/>
    <SolidColorBrush x:Key="NowPlaying" Color="#9ba3a3"/>
    <SolidColorBrush x:Key="NowForeground" Color="#010a0a"/>

    <!-- Slider -->
    <SolidColorBrush x:Key="SliderBackground" Color="#fff"/>


    <!-- Button -->
    <SolidColorBrush x:Key="BorderLess" Color="Transparent" />
    <SolidColorBrush x:Key="ButtonForeground" Color="#FF040404" />
    <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="#FF838383" />
    <SolidColorBrush x:Key="ButtonBackground" Color="Transparent" />

    <!-- Overlay -->
    <SolidColorBrush x:Key="OverlayBackground" Color="#FFF" />
    <SolidColorBrush x:Key="OverlayBG" Color="#80000000" />


</ResourceDictionary>
