<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme -->
    <ResourceDictionary x:Key="DarkTheme">
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#212121"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2C2C2C"/>
        <SolidColorBrush x:Key="Foreground" Color="White"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FFD180"/>
    </ResourceDictionary>

    <!-- Light Theme -->
    <ResourceDictionary x:Key="LightTheme">
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="White"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="LightGray"/>
        <SolidColorBrush x:Key="Foreground" Color="Black"/>
        <SolidColorBrush x:Key="AccentColor" Color="DodgerBlue"/>
    </ResourceDictionary>

    <!-- Light Grey Theme -->
    <ResourceDictionary x:Key="LightGreyTheme">
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#DCDCDC"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#C8C8C8"/>
        <SolidColorBrush x:Key="Foreground" Color="Black"/>
        <SolidColorBrush x:Key="AccentColor" Color="DarkOrange"/>
    </ResourceDictionary>
    

</ResourceDictionary>