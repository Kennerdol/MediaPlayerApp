<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <!-- Theme colors -->
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#212121" />
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2C2C2C" />
        <SolidColorBrush x:Key="Foreground" Color="White" />
        <SolidColorBrush x:Key="AccentColor" Color="#FFD180" />
        <SolidColorBrush x:Key="ButtonBackground" Color="#444444" />
        <SolidColorBrush x:Key="ButtonForeground" Color="White" />
        <SolidColorBrush x:Key="SliderBackground" Color="#666666" />
        <SolidColorBrush x:Key="SliderThumbBackground" Color="#FFD180" />
        <SolidColorBrush x:Key="BorderRadius" Color="Gray" />
        <SolidColorBrush x:Key="MenuBackground" Color="LightGray" />
        <SolidColorBrush x:Key="NoBackground" Color="Transparent" />
        <SolidColorBrush x:Key="PlayingForeground" Color="#0370c8"/>
        <SolidColorBrush x:Key="TextForeground" Color="Black"/>


        <Style TargetType="Button">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="{DynamicResource NoBackground}" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <BitmapImage x:Key="DefaultCover" UriSource="/Icons/treble-clef.png"/>
 

</ResourceDictionary>