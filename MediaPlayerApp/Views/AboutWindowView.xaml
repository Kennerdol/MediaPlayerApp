<Window x:Class="MediaPlayerApp.Views.AboutWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayerApp.Views"
        mc:Ignorable="d"
        Title="AboutWindowView" Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource WindowForeground}">
    <Border BorderBrush="#80000000" BorderThickness="1" CornerRadius="5" Margin="5">
        <Grid>
            
            <!-- Top right license link -->
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" FontSize="15">
                <Hyperlink NavigateUri="https://github.com/Kennerdol/MediaPlayerApp/blob/master/LICENSE" RequestNavigate="Hyperlink_RequestNavigate">
                    License Terms
                </Hyperlink>
            </TextBlock>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- App Icon -->
                <Image Source="/Icons/logo.png" Width="48" Height="48" Margin="0,0,0,10"/>

                <!-- App Name -->
                <TextBlock FontSize="18" FontWeight="Bold">Duducha Media Player</TextBlock>

                <!-- Version -->
                <TextBlock Margin="0,5,0,0">Version 1.0.0</TextBlock>

                <!-- Developer -->
                <TextBlock Margin="0,5,0,10">Developed by Kennedy Mulenga</TextBlock>

                <!-- Copyright -->
                <TextBlock Margin="0,10,0,10">© 2025 FLUXCORE SOLUTIONS LTD</TextBlock>

                <!-- Close button -->
                <Button Content="OK" Width="80" Click="Close_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
