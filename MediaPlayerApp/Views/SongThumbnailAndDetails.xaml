<UserControl x:Class="MediaPlayerApp.Views.SongThumbnailAndDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayerApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Album Cover -->
            <RowDefinition Height="Auto"/>
            <!-- Song Info -->
            <RowDefinition Height="Auto"/>
            <!-- Progress -->
            <RowDefinition Height="*"/>
            <!-- Controls -->
        </Grid.RowDefinitions>

        <!-- 🎵 Album Cover -->
        <Border Grid.Row="0" CornerRadius="12" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,20">
            <Image Source="/Icons/musical-note.png" Width="300" Height="300" Stretch="UniformToFill"/>
        </Border>

        <!-- 📋 Song Info -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Center">
            <TextBlock Text="Song Title" FontSize="22" Foreground="White" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Text="Artist Name" FontSize="16" Foreground="LightGray" TextAlignment="Center"/>
            <TextBlock Text="Album Name (2023)" FontSize="14" Foreground="Gray" TextAlignment="Center"/>
            <TextBlock Text="Genre: Pop  |  Duration: 3:45" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- ⏳ Progress Bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="0:45" Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider Minimum="0" Maximum="100" Value="45" Width="500"/>
            <TextBlock Text="3:45" Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- 🎚 Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" >
            <Button Content="⏮" Width="50" Height="50" FontSize="20"/>
            <Button Content="▶" Width="60" Height="60" FontSize="24"/>
            <Button Content="⏭" Width="50" Height="50" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
