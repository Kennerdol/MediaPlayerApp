<UserControl x:Class="MediaPlayerApp.Views.MediaControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayerApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="400" Background="White">
    
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Slider x:Name="Slider" Width="400" Minimum="0" Maximum="100" Value="0" Orientation="Horizontal" Margin="2, 5"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button>
                <Image Source="/Icons/add.png" />
            </Button>
            <Button>
                <Image Source="/Icons/play.png" />
            </Button>
            <Button>
                <Image Source="/Icons/previous.png" />
            </Button>
            <Button>
                <Image Source="/Icons/stop.png" />
            </Button>
            <Button>
                <Image Source="/Icons/next.png" />
            </Button>
            <Button>
                <Image Source="/Icons/repeat.png" />
            </Button>
            <Button>
                <Image Source="/Icons/shuffle.png" />
            </Button>
            <Button>
                <Image Source="/Icons/playlist.png" />
            </Button>

            <Grid>
                <!-- Speaker Button -->
                <Button x:Name="speakerButton" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Icons/speaker.png" Stretch="Uniform"/>
                </Button>

                <!-- Volume Popup -->
                <Popup x:Name="volumePopup"
                   PlacementTarget="{Binding ElementName=speakerButton}"
                   Placement="Right"
                   StaysOpen="False"
                   AllowsTransparency="True">
                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
                        <Slider x:Name="volumeSlider" Width="100" Minimum="0" Maximum="100" Value="15" Orientation="Horizontal"/>
                    </Border>
                </Popup>
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
