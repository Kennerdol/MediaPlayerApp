<Window x:Class="MediaPlayerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayerApp"
        xmlns:UserControl="clr-namespace:MediaPlayerApp.Views"

        mc:Ignorable="d"
        Icon="/Icons/logo.png"
        Title="Duducha" Height="750" Width="1000" x:Name="MainWin">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <!--Menubar-->
            <RowDefinition />
            <!--Main Content-->
            <RowDefinition Height="80"/>
            <!--Controls-->
        </Grid.RowDefinitions>

            <!-- Menu bar -->
            <UserControl:MenuBar Grid.ColumnSpan="2"/>
        
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" /> <!-- Media takes more space -->
                    <ColumnDefinition Width="3"/>   <!-- Splitter width -->
                    <ColumnDefinition Width="2*"/> <!-- Playlist/details -->
                </Grid.ColumnDefinitions>
        
       
        
                <!-- Media playback area -->
                <MediaElement x:Name="mediaElement" 
                          Grid.Row="1" Grid.Column="0"
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          LoadedBehavior="Manual"/>

                <!-- Thumbnail + song details -->
                <UserControl:SongThumbnailAndDetails 
                  x:Name="thumbNailAndDetails"
                  Grid.Row="1" Grid.Column="0"
                  VerticalAlignment="Top" 
                  Margin="10"
                  Height="150" Width="300"
                  Panel.ZIndex="1"/> <!-- overlays video -->

                <!-- Splitter -->
                <GridSplitter Grid.Row="1" Grid.Column="1"
                          Width="3" BorderBrush="LightGray" BorderThickness="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="LightGray"
                          ShowsPreview="True"/>

                <!-- Playlist / navigation -->
                <Frame x:Name="MainFrame" 
                   Grid.Row="1" Grid.Column="2" 
                   NavigationUIVisibility="Hidden" 
                   Margin="10,20,10,0"/>
            </Grid>
        <!-- Media controls -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
                <UserControl:MediaControls x:Name="mediaController" />
            </StackPanel>
        
    </Grid>
</Window>
