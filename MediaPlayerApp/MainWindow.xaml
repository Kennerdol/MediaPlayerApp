<Window x:Class="MediaPlayerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duducha" Height="500" Width="800"
        Icon="/Icons/logo.png"
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">


    <Grid>
        <!-- Define rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu bar -->
            <RowDefinition />
            <!-- Main content -->
            <RowDefinition Height="Auto"/>
            <!-- Media controls -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- ===== Menu bar ===== -->
        <Menu Grid.Row="0" x:Name="TopMenu" Background="{DynamicResource WindowBackground}" 
              Foreground="{DynamicResource WindowForeground}">
            <MenuItem Header="_File" BorderThickness="0" BorderBrush="{DynamicResource WindowBackground}">
                <MenuItem Header="Load Playlist" Click="LoadPlaylist_Click" Background="{DynamicResource WindowBackground}" 
                          Foreground="{DynamicResource WindowForeground}" BorderThickness="0" BorderBrush="{DynamicResource WindowBackground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/openPlaylist.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Save Playlist" Click="SavePlaylist_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/save.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Clear Playlist" Click="ClearPlaylist_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/clear.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Exit" Click="Exit_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/shutdown.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>
                
            </MenuItem>
            <MenuItem Header="_Playback" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                <MenuItem Header="Play/Pause" Click="PlayPause_Click" x:Name="PlayPauseItem" BorderThickness="0" 
                          Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/play.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Next" Click="Next_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/next.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Previous" Click="Previous_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/previous.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Stop" Click="Stop_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/stop.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Speed" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/speed.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                    <MenuItem Header="Slower" IsCheckable="True" Click="ChangeSpeed_Click" Tag="0.5" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                        <MenuItem.Icon>
                            <Image Source="/Icons/speed-fast.png" Style="{Binding icon}"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Slow" IsCheckable="True" Click="ChangeSpeed_Click" Tag="0.75" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                        <MenuItem.Icon>
                            <Image Source="/Icons/speed-fast.png" Style="{Binding icon}"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Normal" IsCheckable="True" Click="ChangeSpeed_Click" Tag="1" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                        <MenuItem.Icon>
                            <Image Source="/Icons/speed-normal.png" Style="{Binding icon}"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Fast" IsCheckable="True" Click="ChangeSpeed_Click" Tag="1.5" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                        <MenuItem.Icon>
                            <Image Source="/Icons/speed-fast.png" Style="{Binding icon}"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Faster" IsCheckable="True" Click="ChangeSpeed_Click" Tag="2.0" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                        <MenuItem.Icon>
                            <Image Source="/Icons/speed-faster.png" Style="{Binding icon}"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

            </MenuItem>

            <MenuItem Header="_Settings" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                <MenuItem Header="Themes" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/theme.png" Style="{Binding icon}" />
                    </MenuItem.Icon>
                    <MenuItem Header="Light" Click="LightTheme_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                        <MenuItem.Icon>
                            <Image Source="/Icons/light.png" Style="{Binding icon}"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Dark" Click="DarkTheme_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                        <MenuItem.Icon>
                            <Image Source="/Icons/dark-theme.png" Style="{Binding icon}"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="Help" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                <MenuItem Header="How To" Click="HowTo_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/help.png" Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Check for Updates" Click="CheckForUpdates_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/updates.png"  Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="About" Click="About_Click" BorderThickness="0" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
                    <MenuItem.Icon>
                        <Image Source="/Icons/info.png"  Style="{Binding icon}"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

        </Menu>

        <!-- ===== Main Content (Media + Playlist) ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MediaColumn" Width="*"/>
                <!-- Media -->
                <ColumnDefinition x:Name="SplitterColumn" Width="3"/>
                <!-- Splitter -->
                <!--<ColumnDefinition x:Name="PlaylistColumn" Width="Auto"/>-->
                <ColumnDefinition x:Name="PlaylistColumn" Width="Auto"/>
                <!-- Playlist -->
            </Grid.ColumnDefinitions>

            <!-- ==== MediaElement ==== -->
            <!-- 🎬 Left Side (Media + Info + Visualizer) -->
            <Grid Grid.Column="0" Background="{DynamicResource WindowBackground}">
                <!-- Base MediaElement -->
                <MediaElement x:Name="media_Element"
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Manual"
                  Stretch="Uniform" MediaFailed="media_Element_MediaFailed" 
                  MouseLeftButtonDown="MediaElement_MouseLeftButtonDown" MouseWheel="MediaElement_MouseWheel"/>

                <!-- 📀 Watermark-style Thumbnail + Song Info -->
                <Viewbox Stretch="Uniform" x:Name="SongInfoPanel">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="20" Opacity="0.75">
                        <!-- watermark effect -->

                        <!-- Album Cover -->
                        <Border CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Width="300" Height="300" Background="{DynamicResource NoBackground}">
                            <Image x:Name="AlbumThumbnail" Source="/Icons/musical-note.png" Opacity="0.9" Stretch="UniformToFill"/>
                        </Border>

                        <!-- Song Info -->
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock x:Name="CurrentTitle" Text="{Binding Title}" FontSize="16"  Foreground="{DynamicResource WindowForeground}" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                            <TextBlock x:Name="SongArtist" Text="{Binding Artist}" FontSize="13" Foreground="{DynamicResource WindowForeground}" TextAlignment="Center"/>
                            <TextBlock x:Name="totalTime" Text="{Binding Duration}" FontSize="12"  Foreground="{DynamicResource WindowForeground}" TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
                <!-- 🎶 Equalizer Overlay -->
                <StackPanel x:Name="VisualizerPanel"  Orientation="Horizontal"  HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="0,0,0,50" Visibility="Hidden">
                    <Rectangle x:Name="Bar1" Fill="{DynamicResource AccentColor}" Width="10" Height="5" Margin="2,0"/>
                    <Rectangle x:Name="Bar2" Fill="{DynamicResource AccentColor}" Width="10" Height="10" Margin="2,0"/>
                    <Rectangle x:Name="Bar3" Fill="{DynamicResource AccentColor}" Width="10" Height="15" Margin="2,0"/>
                    <Rectangle x:Name="Bar4" Fill="{DynamicResource AccentColor}" Width="10" Height="20" Margin="2,0"/>
                    <Rectangle x:Name="Bar5" Fill="{DynamicResource AccentColor}" Width="10" Height="10" Margin="2,0"/>
                    <Rectangle x:Name="Bar6" Fill="{DynamicResource AccentColor}" Width="10" Height="5" Margin="2,0"/>
                    <Rectangle x:Name="Bar7" Fill="{DynamicResource AccentColor}" Width="10" Height="15" Margin="2,0"/>
                </StackPanel>
                
                <!-- ================= Overlay Controls ============================ -->
                <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                      x:Name="PlayerControlsGrid" Background="{DynamicResource OverlayBackground}" 
                      Visibility="Collapsed" Height="Auto" Width="550" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!-- ⏳ Progress Bar -->
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Current time -->
                            <ColumnDefinition Width="*"/>
                            <!-- Slider (expands) -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Total time -->
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="CurrentTime"
                           Grid.Column="0"
                           Text="00:00:00" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource WindowForeground}"/>

                        <Slider x:Name="TimeSlider" Background="{DynamicResource SliderOverlayBG}"
                            Grid.Column="1"
                            Minimum="0"
                            Maximum="1"
                            Value="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch"
                            IsMoveToPointEnabled="True"
                            Cursor="Hand"
                            PreviewMouseLeftButtonDown="TimeSlider_PreviewMouseLeftButtonDown"
                            PreviewMouseLeftButtonUp="TimeSlider_PreviewMouseLeftButtonUp"
                            ValueChanged="TimeSlider_ValueChanged">

                        </Slider>

                        <TextBlock x:Name="TotalTime"
                   Grid.Column="2"
                   Text="00:00:00" 
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource WindowForeground}"/>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Background="{DynamicResource NoBackground}">
                        <Button x:Name="FullScreen" Click="FullScreen_Click" ToolTip="Toggle Screen" >
                            <Image x:Name="FullScreenImage" Source="/Icons/full-screen.png" />
                        </Button>

                        <!--======= Play Pause =========-->
                        <Button x:Name="PlayPauseButton" Click="PlayPause_Click" ToolTip="Play" >
                            <Image x:Name="PlayPauseImage" Source="/Icons/play.png" />
                        </Button>


                        <Button Name="Previous" Click="Previous_Click" ToolTip="Previous" >
                            <Image Source="/Icons/previous.png" />
                        </Button>
                        <Button Name="Stop" Click="Stop_Click" ToolTip="Stop" >
                            <Image Source="/Icons/stop.png" />
                        </Button>
                        <Button Name="Next" Click="Next_Click" ToolTip="Next" >
                            <Image Source="/Icons/next.png" />
                        </Button>
                        <Button Name="Repeat" Click="Repeat_Click" ToolTip="Repeat" >
                            <Image x:Name="RepeatImage" Source="/Icons/repeat.png"/>
                        </Button>
                        <Button Name="ShuffleButton" Click="Shuffle_Click" ToolTip="Shuffle" >
                            <Image Source="/Icons/shuffle.png" />
                        </Button>
                        

                        <Grid>
                            <!-- Volume Button -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                <!--Volume Button-->
                                <Button x:Name="speakerButton" Height="30" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                ToolTip="Volume">
                                    <Image x:Name="VolumeSpeaker" Source="/Icons/volume-low.png" Stretch="Uniform"/>
                                </Button>

                                <!-- Volume Slider -->

                                <Slider x:Name="VolumeSlider" VerticalAlignment="Center" HorizontalAlignment="Left"
                                        Minimum="0"
                                        Maximum="1"
                                        Width="100"
                                        Value="0.2"
                                        SmallChange="0.05"
                                        LargeChange="0.1"
                                        TickFrequency="0.05"
                                        ValueChanged="VolumeSlider_ValueChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>



            <!-- ==== Splitter ==== -->
            <GridSplitter Grid.Column="1" x:Name="GridPlit" Width="Auto" HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch" ShowsPreview="True" ResizeBehavior="PreviousAndNext"
                          Background="{DynamicResource SplitterBackgroundcolor}" BorderBrush="{DynamicResource SplitterBordercolor}"/>

            <!-- ==== Playlist ==== -->
            <Grid Grid.Column="2" x:Name="PlaylistGrid" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <!-- ==== Search and Load File ==== -->
                    <RowDefinition />
                    <!-- ==== Playlist ==== -->
                </Grid.RowDefinitions>

                <!-- ==== Search & buttons ==== -->
                <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Right">
                    <Button x:Name="OpenFileButton" Grid.Column="1" Background="{DynamicResource NoBackground}" ToolTip="Load Media"
                            BorderBrush="{DynamicResource BorderLess}" Margin="0,0,5,0" Width="50" Click="OpenFile_Click">
                        <Image Source="/Icons/treble-clef.png" />
                    </Button>

                    <TextBox x:Name="SearchTextBox"
                             Width="250" Height="30"
                             FontSize="15"
                             Margin="5,0,5,0"
                             Padding="5"
                             TextChanged="SearchTextBox_TextChanged"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Background="{DynamicResource TextBoxBackground}"
                             Foreground="{DynamicResource TextBoxForeground}"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <!-- The text input area -->
                                                <ScrollViewer x:Name="PART_ContentHost"/>

                                                <!-- Watermark text -->
                                                <TextBlock x:Name="PART_Watermark"
                                       Text="Search..."
                                       Foreground="{DynamicResource TextBoxForeground}"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <!-- Show watermark when Text is empty -->
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="PART_Watermark"
                                        Property="Visibility"
                                        Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button x:Name="ClearSearch" Grid.Column="1" Background="{DynamicResource NoBackground}" ToolTip="Clear Search"
                            BorderBrush="{DynamicResource BorderLess}" Margin="0,0,5,0" Width="50" Click="ClearSearch_Click">
                        <Image Source="/Icons/clear.png" />
                    </Button>
                </StackPanel>
                
                <!-- ==== Playlist list ==== -->
                <Border Grid.Row="1" BorderBrush="{DynamicResource PlaylistBorder}"  >
                    <ListView x:Name="PlaylistListView" Background="{DynamicResource PlaylistBackground}"
                              MouseDoubleClick="PlaylistListView_MouseDoubleClick" Foreground="{DynamicResource PlaylistFG}"
                              PreviewMouseLeftButtonDown="PlaylistListView_PreviewMouseLeftButtonDown"
                              PreviewMouseMove="PlaylistListView_PreviewMouseMove"
                              BorderThickness="0"
                              AllowDrop="True"
                              Drop="PlaylistListView_Drop">

                        <!-- ✅ Right-click menu -->
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add File" Click="OpenFile_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Icons/add.png" Style="{Binding icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Play" Click="Playlist_Play_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Icons/play.png" Style="{Binding icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Stop" Click="Stop_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Icons/stop.png" Style="{Binding icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Remove" Click="Playlist_Remove_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Icons/remove.png" Style="{Binding icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Clear Playlist" Click="ClearPlaylist_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Icons/clear.png" Style="{Binding icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <!-- Apply background highlight based on IsPlaying -->
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="{DynamicResource NoBackground}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource NowPlaying}"/>
                                        <!-- Darkish color -->
                                        <Setter Property="Foreground" Value="{DynamicResource NowForeground}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!-- Default icon -->
                                                <Image Source="/Icons/treble-clef.png"
                                               Width="20" Height="20"
                                               Stretch="UniformToFill"
                                               x:Name="DefaultIcon"/>

                                                <!-- Playing icon -->
                                                <Image Source="/Icons/play.png"
                                               Width="20" Height="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed"
                                               x:Name="PlayingIcon"/>
                                            </Grid>
                                            
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                    <Setter TargetName="DefaultIcon" Property="Visibility" Value="Collapsed"/>
                                                    <Setter TargetName="PlayingIcon" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Title" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title, TargetNullValue='Unknown Title'}" 
                                                        TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Artist" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Artist, TargetNullValue='Unknown Artist'}" 
                                                    TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Duration" Width="90">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Duration, TargetNullValue='--:--'}" 
                                                    HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </Grid>
        </Grid>

        <!-- ===== Media Controls ===== -->
        <Grid Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="ControlsGrid" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

             <!--⏳ Progress Bar--> 
            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                     <!--Current time--> 
                    <ColumnDefinition Width="*"/>
                     <!--Slider (expands)--> 
                    <ColumnDefinition Width="Auto"/>
                     <!--Total time--> 
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="time"
                           Grid.Column="0"
                           Text="00:00:00" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource WindowForeground}"/>

                <Slider x:Name="slider" Background="{DynamicResource SliderBackground}"
                        Grid.Column="1"
                        Minimum="0"
                        Maximum="1"
                        Value="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        IsMoveToPointEnabled="True"
                        Cursor="Hand"
                        PreviewMouseLeftButtonDown="TimeSlider_PreviewMouseLeftButtonDown"
                        PreviewMouseLeftButtonUp="TimeSlider_PreviewMouseLeftButtonUp"
                        ValueChanged="TimeSlider_ValueChanged">

                </Slider>

                <TextBlock x:Name="TotalDuration"
                           Grid.Column="2"
                           Text="00:00:00" 
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource WindowForeground}"/>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Background="{DynamicResource NoBackground}">

                <Button x:Name="Full_Screen" Click="FullScreen_Click" ToolTip="Toggle Screen" >
                    <Image x:Name="FullScreen_Image" Source="/Icons/full-screen.png" />
                </Button>

                <Button x:Name="Play_PauseButton" Click="PlayPause_Click" ToolTip="Play" >
                    <Image x:Name="Play_PauseImage" Source="/Icons/play.png" />
                </Button>

                <Button Name="Prev" Click="Previous_Click" ToolTip="Previous" >
                    <Image Source="/Icons/previous.png" />
                </Button>
                <Button Name="stop" Click="Stop_Click" ToolTip="Stop" >
                    <Image Source="/Icons/stop.png" />
                </Button>
                <Button Name="next" Click="Next_Click" ToolTip="Next" >
                    <Image Source="/Icons/next.png" />
                </Button>
                <Button Name="repeat" Click="Repeat_Click" ToolTip="Repeat" >
                    <Image x:Name="Repeat_Image" Source="/Icons/repeat.png"/>
                </Button>
                <Button Name="shuffle" Click="Shuffle_Click" ToolTip="Shuffle" >
                    <Image Source="/Icons/shuffle.png" />
                </Button>
                <Button Name="TogglePlaylist" Click="TogglePlaylist_Click" ToolTip="Toggle Playlist">
                    <Image Source="/Icons/playlist.png" />
                </Button>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                     <!--Volume Button-->
                    <Button x:Name="volumeBtn" Height="30" VerticalAlignment="Center" 
                            Click="VolumeBtn_Click" ToolTip="Mute/Unmute">
                        <Image x:Name="VolumeIcon" Source="/Icons/volume-low.png" Stretch="Uniform"/>
                    </Button>

                     <!--Volume Slider-->

                    <Slider x:Name="Volume_Slider" VerticalAlignment="Center" HorizontalAlignment="Left"
                                        Minimum="0"
                                        Maximum="1"
                                        Width="80"
                                        Value="0.2"
                                        SmallChange="0.05"
                                        LargeChange="0.1"
                                        TickFrequency="0.05"
                                        ValueChanged="VolumeSlider_ValueChanged"/>
                    
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- ===== Status Bar ===== -->
        <StatusBar Grid.Row="3" x:Name="Status" Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource WindowForeground}">
            <StatusBarItem x:Name="NowPlayingText" Content="Now Playing: No Track Loaded"/>
            <Separator/>
            <StatusBarItem x:Name="RepeatModeText" Content="Repeat: Off"/>
            <Separator/>
            <StatusBarItem x:Name="ShuffleModeText" Content="Shuffle: Off" HorizontalAlignment="Right"/>
            <Separator/>
            <StatusBarItem x:Name="VolumeText"  HorizontalAlignment="Right"/>
            <Separator/>
            <StatusBarItem x:Name="TrackCountText" Content="Total Tracks: 0" HorizontalAlignment="Right"/>
        </StatusBar>

        <!-- Blackish overlay for modal blur -->
        <Rectangle x:Name="BlurOverlay"
               Fill="Black"
               Opacity="0"
               Visibility="Collapsed"
               Panel.ZIndex="1000"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

    </Grid>
</Window>
