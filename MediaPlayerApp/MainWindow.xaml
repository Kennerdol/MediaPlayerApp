<Window x:Class="MediaPlayerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duducha" Height="500" Width="1100"
        Icon="/Icons/logo.png"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Theme colors -->
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#212121" />
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2C2C2C" />
        <SolidColorBrush x:Key="Foreground" Color="White" />
        <SolidColorBrush x:Key="AccentColor" Color="#FFD180" />
        <SolidColorBrush x:Key="ButtonBackground" Color="#444444" />
        <SolidColorBrush x:Key="ButtonForeground" Color="White" />
        <SolidColorBrush x:Key="SliderBackground" Color="#666666" />
        <SolidColorBrush x:Key="SliderThumbBackground" Color="#FFD180" />

        <!-- Equalizer animation -->
        <Storyboard x:Key="VisualizerStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Bar1" Storyboard.TargetProperty="Height"
                 From="5" To="50" Duration="0:0:0.5" AutoReverse="True" />
            <DoubleAnimation Storyboard.TargetName="Bar2" Storyboard.TargetProperty="Height"
                 From="10" To="45" Duration="0:0:0.45" AutoReverse="True" BeginTime="0:0:0.1" />
            <DoubleAnimation Storyboard.TargetName="Bar3" Storyboard.TargetProperty="Height"
                 From="15" To="55" Duration="0:0:0.6" AutoReverse="True" BeginTime="0:0:0.2" />
            <DoubleAnimation Storyboard.TargetName="Bar4" Storyboard.TargetProperty="Height"
                 From="20" To="40" Duration="0:0:0.55" AutoReverse="True" BeginTime="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetName="Bar5" Storyboard.TargetProperty="Height"
                 From="10" To="60" Duration="0:0:0.7" AutoReverse="True" BeginTime="0:0:0.4" />
            <DoubleAnimation Storyboard.TargetName="Bar6" Storyboard.TargetProperty="Height"
                 From="5" To="45" Duration="0:0:0.4" AutoReverse="True" BeginTime="0:0:0.5" />
            <DoubleAnimation Storyboard.TargetName="Bar7" Storyboard.TargetProperty="Height"
                 From="15" To="50" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.6" />
        </Storyboard>

        <!-- Fade In -->
        <Storyboard x:Key="FadeInControls">
            <DoubleAnimation
                Storyboard.TargetName="PlayerControlsGrid"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.3" />
        </Storyboard>

        <!-- Fade Out -->
        <Storyboard x:Key="FadeOutControls">
            <DoubleAnimation
                Storyboard.TargetName="PlayerControlsGrid"
                Storyboard.TargetProperty="Opacity"
                From="1" To="0"
                Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Key="FadeInPlaylist">
            <DoubleAnimation Storyboard.TargetName="PlaylistListView"
         Storyboard.TargetProperty="Opacity"
         From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutPlaylist">
            <DoubleAnimation Storyboard.TargetName="PlaylistListView"
         Storyboard.TargetProperty="Opacity"
         From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>

        <Style TargetType="Button">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <BitmapImage x:Key="DefaultCover" UriSource="/Icons/treble-clef.png"/>
    </Window.Resources>
    
    <Grid>
        <!-- Define rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu bar -->
            <RowDefinition />
            <!-- Main content -->
            <RowDefinition Height="80"/>
            <!-- Media controls -->
            <RowDefinition Height="25"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- ===== Menu bar ===== -->
        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="_File">
                <MenuItem Header="Open..."/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="_Playback">
                <MenuItem Header="Play"/>
                <MenuItem Header="Pause"/>
                <MenuItem Header="Next"/>
                <MenuItem Header="Previous"/>
                <MenuItem Header="Stop"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="How To"/>
                <MenuItem Header="About"/>
                <MenuItem Header="Contact"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="Theme"/>
            </MenuItem>
        </Menu>

        <!-- ===== Main Content (Media + Playlist) ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MediaColumn" Width="3*"/>
                <!-- Media -->
                <ColumnDefinition x:Name="SplitterColumn" Width="5"/>
                <!-- Splitter -->
                <ColumnDefinition x:Name="PlaylistColumn" Width="Auto"/>
                <!-- Playlist -->
            </Grid.ColumnDefinitions>

            <!-- ==== MediaElement ==== -->
            <!-- 🎬 Left Side (Media + Info + Visualizer) -->
            <Grid Grid.Column="0" Margin="10">
                <!-- Base MediaElement -->
                <MediaElement x:Name="media_Element"
                  LoadedBehavior="Manual"
                  Stretch="Uniform"
                  />

                <!-- 📀 Watermark-style Thumbnail + Song Info -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                VerticalAlignment="Bottom" Margin="20" Opacity="0.75">
                    <!-- watermark effect -->

                    <!-- Album Cover -->
                    <Border CornerRadius="8" BorderBrush="White" BorderThickness="1" Width="120" Height="120" Background="#22000000">
                        <Image Source="/Icons/musical-note.png" Stretch="UniformToFill" Opacity="0.9"/>
                    </Border>

                    <!-- Song Info -->
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock x:Name="CurrentTitle" Text="{Binding Title}" FontSize="16" Foreground="White" FontWeight="Bold" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Artist}" FontSize="13" Foreground="LightGray"/>
                    </StackPanel>
                </StackPanel>

                <!-- 🎶 Equalizer Overlay -->
                <StackPanel x:Name="VisualizerPanel"  Orientation="Horizontal"  HorizontalAlignment="Center"
                VerticalAlignment="Center" Margin="0,0,0,50" Visibility="Hidden">
                    <!--<Rectangle x:Name="Bar1" Fill="{DynamicResource AccentColor}" Width="10" Height="5" Margin="2,0"/>
                    <Rectangle x:Name="Bar2" Fill="{DynamicResource AccentColor}" Width="10" Height="10" Margin="2,0"/>
                    <Rectangle x:Name="Bar3" Fill="{DynamicResource AccentColor}" Width="10" Height="15" Margin="2,0"/>
                    <Rectangle x:Name="Bar4" Fill="{DynamicResource AccentColor}" Width="10" Height="20" Margin="2,0"/>
                    <Rectangle x:Name="Bar5" Fill="{DynamicResource AccentColor}" Width="10" Height="10" Margin="2,0"/>
                    <Rectangle x:Name="Bar6" Fill="{DynamicResource AccentColor}" Width="10" Height="5" Margin="2,0"/>
                    <Rectangle x:Name="Bar7" Fill="{DynamicResource AccentColor}" Width="10" Height="15" Margin="2,0"/>-->
                </StackPanel>
            </Grid>



            <!-- ==== Splitter ==== -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch" Background="LightGray"/>

            <!-- ==== Playlist ==== -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <!-- ==== Search and Load File ==== -->
                    <RowDefinition />
                    <!-- ==== Playlist ==== -->
                </Grid.RowDefinitions>

                <!-- ==== Search & buttons ==== -->
                <StackPanel Orientation="Horizontal" Height="40">
                    <TextBox x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged" Margin="5,0,5,0" Padding="3" FontSize="15" Width="250" Height="30" BorderBrush="Gray"/>
                    <Button x:Name="OpenFileButton" Grid.Column="1" Foreground="{DynamicResource Foreground}" BorderBrush="{DynamicResource SliderBackground}" Margin="0,0,5,0" Width="50" Click="OpenFile_Click">
                        <Image Source="/Icons/treble-clef.png" />
                    </Button>
                    <Button x:Name="OpenPlaylistButton" Grid.Column="3" Foreground="{DynamicResource Foreground}" BorderBrush="{DynamicResource SliderBackground}" Margin="5,0,0,0" Width="50" >
                        <Image Source="/Icons/open_playlist.png" />
                    </Button>

                    <Button x:Name="SettingsButton"  Grid.Column="3" Foreground="{DynamicResource Foreground}" BorderBrush="{DynamicResource SliderBackground}" Margin="5,0,0,0" Width="50" Click="Settings_Click">
                        <Image Source="/Icons/settings.png" />
                    </Button>
                </StackPanel>
                
                <!-- ==== Playlist list ==== -->
                <Border Grid.Row="1" BorderBrush="{DynamicResource SecondaryBackgroundColor}" BorderThickness="1" Margin="5">
                    <ListView x:Name="PlaylistListView" Margin="10,5,10,10"
                              MouseDoubleClick="PlaylistListView_MouseDoubleClick"
                              BorderThickness="0"
                              AllowDrop="True"
                              Drop="PlaylistListView_Drop">

                        <!-- Apply background highlight based on IsPlaying -->
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                        <!-- Darkish color -->
                                        <Setter Property="Foreground" Value="#0370c8"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!-- Default icon -->
                                                <Image Source="/Icons/treble-clef.png"
                                               Width="20" Height="20"
                                               Stretch="UniformToFill"
                                               x:Name="DefaultIcon"/>

                                                <!-- Playing icon -->
                                                <Image Source="/Icons/play.png"
                                               Width="20" Height="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed"
                                               x:Name="PlayingIcon"/>
                                            </Grid>

                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                    <Setter TargetName="DefaultIcon" Property="Visibility" Value="Collapsed"/>
                                                    <Setter TargetName="PlayingIcon" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Title}" />
                                <GridViewColumn Header="Artist" Width="150" DisplayMemberBinding="{Binding Artist}" />
                                <GridViewColumn Header="Duration" Width="90" DisplayMemberBinding="{Binding Duration}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Border>
            </Grid>
        </Grid>

        <!-- ===== Media Controls ===== -->
        <Grid Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="PlayerControlsGrid" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ProgressBar x:Name="BufferingProgressBar" Height="5" Margin="0,5" IsIndeterminate="True" Visibility="Hidden"/>

            <!-- ⏳ Progress Bar -->
            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Current time -->
                    <ColumnDefinition Width="*"/>
                    <!-- Slider (expands) -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Total time -->
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="CurrentTime"
                           Grid.Column="0"
                           Text="00:00:00" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource Foreground}"/>

                <Slider x:Name="TimeSlider"
                        Grid.Column="1"
                        Minimum="0" Maximum="1"
                        Value="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        IsMoveToPointEnabled="True"
                        Cursor="Hand"
                        PreviewMouseLeftButtonDown="TimeSlider_PreviewMouseLeftButtonDown"
                        PreviewMouseLeftButtonUp="TimeSlider_PreviewMouseLeftButtonUp"
                        ValueChanged="TimeSlider_ValueChanged"/>

                <TextBlock x:Name="TotalTime"
                           Grid.Column="2"
                           Text="00:00:00" 
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource Foreground}"/>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent">
                <Slider x:Name="SpeedSlider" Width="80" Minimum="0.5" Maximum="2" Value="1" TickPlacement="BottomRight" TickFrequency="0.25"
                            IsSnapToTickEnabled="True" ValueChanged="SpeedSlider_ValueChanged"/>

                <Button Name="Mute" Click="Mute_Click">
                    <Image x:Name="MuteImage" Source="/Icons/speaker.png" />
                </Button>

                <!--======= Play Pause =========-->
                <Button x:Name="PlayPauseButton" Click="PlayPause_Click">
                    <Image x:Name="PlayPauseImage" Source="/Icons/play.png" />
                </Button>
                
                
                <Button Name="Previous" Click="Previous_Click">
                    <Image Source="/Icons/previous.png" />
                </Button>
                <Button Name="Stop" Click="Stop_Click">
                    <Image Source="/Icons/stop.png" />
                </Button>
                <Button Name="Next" Click="Next_Click">
                    <Image Source="/Icons/next.png" />
                </Button>
                <Button Name="Repeat" Click="Repeat_Click">
                    <Image x:Name="RepeatImage" Source="/Icons/repeat.png" />
                </Button>
                <Button Name="ShuffleButton" Click="Shuffle_Click">
                    <Image Source="/Icons/shuffle.png" />
                </Button>
                <Button Name="TogglePlaylist">
                    <Image Source="/Icons/playlist.png" />
                </Button>

                <Grid>
                    <!-- Speaker Button -->
                    <Button x:Name="speakerButton" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Icons/speaker.png" Stretch="Uniform"/>
                    </Button>

                    <!-- Volume Popup -->
                    <Popup x:Name="volumePopup" Placement="Right" StaysOpen="False" AllowsTransparency="True">
                        <Border Background="{DynamicResource ButtonForeground}" BorderBrush="{DynamicResource SliderBackground}" BorderThickness="1" CornerRadius="5" Padding="5">
                            <Slider x:Name="VolumeSlider" ValueChanged="VolumeSlider_ValueChanged" Width="100" Minimum="0" Maximum="100" Value="15" Orientation="Horizontal" SnapsToDevicePixels="True"/>
                        </Border>
                    </Popup>
                </Grid>

            </StackPanel>

            
        </Grid>

        <!-- ===== Status Bar ===== -->
        <StatusBar Grid.Row="3">
            <StatusBarItem x:Name="RepeatModeText" Content="Repeat: Off"/>
            <Separator/>
            <StatusBarItem x:Name="ShuffleModeText" Content="Shuffle: Off" HorizontalAlignment="Right"/>
        </StatusBar>
        
        
        

        <!-- ================== SETTINGS OVERLAY ================== -->
        <Grid x:Name="SettingsOverlay" Grid.RowSpan="3" Visibility="Hidden" Background="#AA000000">
            <Border Width="300" Height="200" Background="{DynamicResource SecondaryBackgroundColor}"
                CornerRadius="10" BorderBrush="{DynamicResource AccentColor}" BorderThickness="2"
                VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Margin="15">
                    <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource Foreground}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a theme:" Margin="0,15,0,5" Foreground="{DynamicResource Foreground}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Dark Theme" Margin="5" Click="DarkTheme_Click"/>
                        <Button Content="Light Theme" Margin="5" Click="LightTheme_Click"/>
                        <Button Content="Light Grey" Margin="5" Click="LightGreyTheme_Click"/>
                    </StackPanel>
                    <Button Content="Close" Margin="0,20,0,0" Click="CloseSettings_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
